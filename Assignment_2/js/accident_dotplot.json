{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/haoyugan/FIT3179/main/Assignment_2/data/Accident_time_season_new2.csv"
  },
  "width":500,
  "title": "Frequency of accidents in a day",
  "mark": {"type": "circle", "tooltip": {"content": "encoding"}},
  "selection": {
    "season_highlight": {
      "type": "multi",
      "fields": ["Season"],
      "bind": "legend"
    }
  },
  "params": [
    {
      "name": "Year_selection",
      "bind": {
        "input": "select",
        "options": [null, "2010", "2011", "2012", "2013", "2014"],
        "labels": ["Show All", "2010", "2011", "2012", "2013", "2014"],
        "name": "Year Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "Year_selection == null || datum.Year == Year_selection"}
  ],
  "encoding": {
    "x": {
      "timeUnit": "hours",
      "field": "Date",
      "type": "ordinal",
      "title": "Time in a day"
    },
    "y": {
      "aggregate": "count",
      "type": "quantitative",
      "title": "Number of accidents"
    },
    "color": {"field": "Season", "type": "nominal", "title": "Season"},
    "opacity": {
      "condition": {"selection": "season_highlight", "value": 1},
      "value": 0.2
    }
  }
}
